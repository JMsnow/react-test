{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": "airbnb",
	"parserOptions": {
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		},
		"sourceType": "module"
	},
	"parser": "babel-eslint",
	"plugins": [
		"react"
	],
	"globals": {
		"CONFIG": false,
		"HTTP_CMD": false,
		"ACTIONIDS_CMD": false,
		"debug": false,
		"utils": false,
		"request": false,
		"helper": false,
		"window": false
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"react/jsx-indent": [
			"error",
			"tab"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"never"
		],
		"linebreak-style": "off",
		"no-tabs": "off",
		"no-underscore-dangle": "off",
		"global-require": "off",
		"class-methods-use-this": "off",
		"import/no-extraneous-dependencies": "off",
		"react/prop-types": "off",
		"max-len": "off",
	  	"react/no-multi-comp": "off",
	  	"react/prefer-stateless-function": "off",
	  	"react/forbid-prop-types": "off",
	  	"jsx-a11y/no-static-element-interactions": "off",
	  	"no-restricted-syntax": 0,
		"jsx-quotes": [
			"error",
			"prefer-single"
		],
	  	"react/jsx-indent-props": [
			"error",
			"tab"
		],
		"react/jsx-filename-extension": [
			"error",
			{
				"extensions": [
					".js",
					".jsx"
				]
			}
		],
		"comma-dangle": [
			"error",
			"never"
		],
		"one-var": [
			"error",
			{
				"initialized": "never",
				"uninitialized": "always"
			}
		],
		"import/extensions": [
			"error",
			{
				"js": "never"
			}
		],
		"import/no-unresolved": [
			"error",
			{
				"ignore": [
					"@",
					"components",
					"containers",
					"states",
					"css",
					"utils",
					"config"
				]
			}
		],
		"arrow-body-style": ["error", "as-needed"]
	}
}
